<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".PinDialog" >

    <TextView
        android:id="@+id/pinLayoutMessage"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pinLayoutOutput"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinLayoutMessage"/>
    
	<TableLayout
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinLayoutOutput"
        android:layout_centerHorizontal="true">
	    
	    <TableRow>
    		<Button android:id="@+id/keypad_1"
            	android:text="1"/>
    	    <Button android:id="@+id/keypad_2"
            	android:text="2"/>
    	    <Button android:id="@+id/keypad_3"
            	android:text="3"/>
	    </TableRow>
	    
	    <TableRow>
    		<Button android:id="@+id/keypad_4"
            	android:text="4"/>
    	    <Button android:id="@+id/keypad_5"
            	android:text="5"/>
    	    <Button android:id="@+id/keypad_6"
            	android:text="6"/>
	    </TableRow>
	    
	    <TableRow>
    		<Button android:id="@+id/keypad_7"
            	android:text="7"/>
    	    <Button android:id="@+id/keypad_8"
            	android:text="8"/>
    	    <Button android:id="@+id/keypad_9"
            	android:text="9"/>
	    </TableRow>
	    
	    <TableRow>
    		<Button android:id="@+id/keypad_back"
            	android:text="@string/ls_back"/>
    	    <Button android:id="@+id/keypad_0"
            	android:text="0"/>
    	    <Button android:text=""/>
	    </TableRow>
	    
	</TableLayout>
</RelativeLayout>